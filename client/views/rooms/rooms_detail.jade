.section-header.nine.columns.centered
  img(style='width:50px;height:50px;', ng-src='{{room.creator.avatar}}')
  span(style='position:relative;top:5px;font-size:25px;') @ {{room.name}}

.row
  .small-6.columns
    .row
      .small-12.columns
        h3 Play a Game
        //- if you created the room, show newGame button / if not created room, hide newGame button
        button.tiny.radius(ng-click='newGame()')

  .small-6.columns
      h3 Room Chat
      #messages.panel.callout.radius
        .chat(ng-repeat='message in messages')
          .chat-avatar
            img(ng-src='{{message.avatar}}')
          {{message.body}}
          hr
      .row.collapse
        .small-10.columns
          input.radius(type='text', ng-model='message', autofocus)
        .small-2.columns
          a.button.success.postfix.text-center(ng-click='chat(message)') Send
