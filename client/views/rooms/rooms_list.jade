.section-header.nine.columns.centered
  h1 ROOMS

.row
  .small-6.columns
    .row
      .small-12.columns
        h3 Create a Room
        .small-4.columns
          input.radius(type='text', ng-model='room.name', placeholder='room name', ng-class='{error: error}')
        .small-4.columns
          input.radius(type='password', ng-model='room.password', placeholder='room password', ng-class='{error: error}')
        .small-4.columns
          button.tiny.radius(ng-click='createRoom(room)') Add Room
    .row
      .twelve.columns
        h3 Room List
    .row
      .small-12.columns
        table#rooms
          thead
            th Owner
            th Name
            th Password
            th Join
          tbody
            tr(ng-repeat='room in rooms | orderBy:"createdAt":true')
              td: div.avatar(style='background-image:url("{{room.avatar}}")')
              td {{room.name}}
              td
                input.radius(type='password', ng-model='password')
              td
                a.button.tiny.radius(ng-click='join(room)') Join

  .small-6.columns
      h3 Global Chat
      #messages.panel.callout.radius
        .chat(ng-repeat='message in messages')
          .chat-avatar
            img(src={{message.avatar}})
          {{message.body}}
          hr
      .row.collapse
        .small-10.columns
          input.radius(type='text', ng-model='message', autofocus)
        .small-2.columns
          a.button.success.postfix.text-center(ng-click='chat(message)') Send
